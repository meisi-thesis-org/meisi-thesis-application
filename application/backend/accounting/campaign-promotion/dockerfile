FROM node:18

RUN apt-get update && apt-get install -y --no-install-recommends apt-utils

WORKDIR /usr/src/app

COPY application/backend/accounting/campaign-promotions/package.json application/backend/accounting/campaign-promotions/yarn.lock ./
RUN yarn install --frozen-lockfile

COPY . .

RUN cd application/backend/accounting/campaign-promotions && yarn build

EXPOSE 8011

CMD ["yarn","start"]